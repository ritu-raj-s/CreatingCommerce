<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<field 
		formid="fname" 
		label="label.input.firstname.profile" 
		mandatory="true" 
		max-length="50" 
		type="string" 
		 binding="custom.firstName"
		/>

	<field 
		formid="lname" 
		label="label.input.lastname.profile" 
		mandatory="true" 
		max-length="50" 
		type="string" 
		 binding="custom.lastName"/>

	<field
		formid="email" 
		label="label.input.email.profile" 
		mandatory="true" 
		max-length="50" 
		regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
		type="string" 
		 binding="custom.email" />
		
		<field
		formid="interestApparel" 
		label="forms.interestedinApparel" 
		binding="custom.interestApparel"
		type="boolean" />
		
			<field
		formid="interestElectronics" 
		label="forms.interestedinElectronics" 
		binding="custom.interestElectronics"
		type="boolean" />
		
			<field
		formid="interestNewspaper" 
		label="forms.interestedinNewsPaper" 
		binding="custom.interestNewsPaper"
		type="boolean" />
		
		<action formid="subscribe" valid-form="true"/>
</form>